<!--index.wxml-->
<view class="container">
  <view class="uploader">
    <input placeholder="标题（>=6个字符）" bindinput="updateInputValue">
    </input>
  </view>
  <view class="uploader">
    <input placeholder="详细描述（选填）" bindinput="updateInputValue2">
    </input>
  </view>
  <view class="uploader">
    <view class="uploader-text" bindtap="doChoose">
      <text>选择图片</text>
    </view>
    <view class="uploader-container" wx:if="{{imageChoose}}">
      <image class="uploader-image" src="{{imageUrl}}" mode="aspectFit" bindtap="previewImg"></image>
    </view>
  </view>
<view class="page">
    <view class="page__bd">
        <mp-cells>
            <mp-cell>
                <mp-uploader 
                  bindfail="uploadError" 
                  bindsuccess="uploadSuccess" 
                  select="{{selectFile}}" 
                  files="{{files}}" 
                  delete='true'
                  max-count="9" 
                  title="图片上传" tips="图片上传提示">
                </mp-uploader>
            </mp-cell>
        </mp-cells>
    </view>
</view>


  <view class="uploader">
    <view class="uploader-text" bindtap="doSend">
      <text>上传</text>
    </view>
  </view>

</view>
