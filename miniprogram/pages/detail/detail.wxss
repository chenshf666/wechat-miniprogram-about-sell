/* pages/databaseGuide/databaseGuide.wxss */

@import "../../style/guide.wxss";

/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.rrow{
  flex-direction: row;
  display: flex;
  height: 100rpx;
  position: flexd;
  bottom: 0;
}

.aaa{
  flex-direction: column
}
.userinfo{
  margin-top: 10rpx;
  height: 140rpx;
  width: 100%;
  background: rgba(0,0,0,0);
  border-color: rgba(0,0,0,0); 
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 30rpx;
  height: 30rpx;
  margin: 10rpx;
  margin-left: 10px;
  margin-right: 10rpx;
  border-radius: 30%;
  background-size: cover;
  background-color: rgb(255, 255, 255);
  align-items: center;
}

.userinfo-avatar[size] {
  width: 80rpx;
}


.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background: rgba(0,0,0,0);
  background-color:rgba(0,0,0,0);
  background-size: cover;
  text-align: left;
  padding-left: 0;
  margin-left: 10px;
  align-items: center;
}

.userinfo-nickname::after {
  border: none;
}

.userinfo-nickname-wrapper {
  flex: 1;
  background-color: rgb(0, 0, 0, 0);
  align-items: left;
  margin-left: 10rpx;
  width:80%;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}

.weui-uploader {
	flex: 1
}


.weui-uploader__bd {
	margin-bottom: -8px;
	margin-right: -8px;
	overflow: hidden
}

.weui-uploader__file {
	float: left;
	margin-right: 8px;
	margin-bottom: 8px
}

.weui-uploader__img {
	display: block;
	width: 96px;
	height: 96px
}

.title {
  font-weight:bold;
  font-size:50rpx;
}
.zhengwen {
  font-size: 45rpx;
  word-break: keep-all;word-wrap: break-word;white-space: pre-line;
}

.img {
  width: 100%;
}

.swiperHome {
  height: 230px;
}

.detail_button {
  position:fixed;
  bottom:0;
  width:100%;
}

.edit_button {
  flex:1;
  background-color:green;
}