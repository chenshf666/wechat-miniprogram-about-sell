  <!-- 查询记录 -->
  <view class="guide">
    <view wx:if="{{result_array}}" wx:for="{{result_array}}">
      <view class="userinfo">
        <button 
          class="userinfo-avatar"
          style="background-image: url({{id2userInfo[item._id].head}})"
          size="default"
        ></button>
      
        <view class="userinfo-nickname-wrapper">
          <button class="userinfo-nickname" bindtap="toChat" data-roomid="{{item._id}}">{{id2userInfo[item._id].nickName || 'Unknown'}}</button>
        </view>
      </view>
    </view>
  </view>