  <!-- 查询记录 -->
  <view class="guide">
  <view class="header">
   


		<view class="search">
			<image class="icon" src="/images/index/icon_search.png"/>
			<input bindinput="inputSearch" placeholder="输入旧物名称" auto-focus/>
		</view>
    <button class="yellow {{searchWords.length?'':'disabled'}}" size="mini" hover-class="hover" loading="" plain="" disabled="{{!searchWords.length}}"
      bindtap="doSearch">搜索
    </button>
  </view>

    <!--<text class="code" wx:if="{{queryResult}}">{{queryResult}}</text>-->
    <view wx:if="{{queryResult}}" wx:for="{{result_array}}">
      <view class="userinfo">
        <button 
          class="userinfo-avatar"
          style="background-image: url({{item.head}})"
          size="default"
        ></button>

        <view class="userinfo-nickname-wrapper">
          <button class="userinfo-nickname" bindtap="test">{{item.nick}}</button>
        </view>
      </view>
      <text>{{item.info}}</text>
      <image src="{{item.url}}" mode="aspectFit"></image>
    </view>
  </view>